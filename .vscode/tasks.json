{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "--std=c++11",
                "-o",
                "${fileDirname}/a.out",
                "-I","/opt/opencv/include/opencv4/opencv2",
                "-I","/opt/opencv/include/opencv4",
                "-L","/opt/opencv/lib64",
                "-l","opencv_core",
                "-l","opencv_highgui",
                "-l","opencv_imgproc",
                "-l","opencv_imgcodecs" 
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}